
@model StoreBuild.Web.ViewsModels.CategoryViewModel

@{
    ViewData["Title"] = "Category";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Categoria</h3>
        <a href="/Category" class="btn btn-primary">Voltar</a>
    </div>
</div>
<form id="form" class="row form-horizontal" asp-action="CreateOrEdit" asp-controller="Category" 
    data-ajax="true" data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Category'"
    asp-anti-forgery>
    <div class="form-group">
        <label class="col-md-2 control-label">Nome</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="Name">    
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <button class="btn btn-success">Salvar</button>
        </div>
    </div>
</form>
</div>

<!-- https://github.com/godinis22/Curso  -->

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-ajax-unobtrusive@3.2.4/jquery.unobtrusive-ajax.min.js"></script>
}