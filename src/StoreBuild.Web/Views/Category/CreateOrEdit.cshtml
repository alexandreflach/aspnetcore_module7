
@model StoreBuild.Web.ViewsModels.CategoryViewModel

@{
    ViewData["Title"] = "Category";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Categoria</h3>
        <a href="/Category" class="btn btn-primary">Voltar</a>
    </div>
</div>
<form class="row form-horizontal" asp-action="CreateOrEdit" asp-controller="Category" asp-anti-forgery asp-action="POST">
    <div class="form-group">
        <label class="col-md-2 control-label">Nome</label>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="Name">    
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <button class="btn btn-success">Salvar</button>
        </div>
    </div>
</form>
</div>

<!-- https://github.com/godinis22/Curso  -->

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
}